<launch>

  <include file="$(find iai_donbot_description)/launch/upload.launch" />

  <node name="robot_state_publisher" type="robot_state_publisher" pkg="robot_state_publisher" />

  <include file="$(find iai_donbot_bringup)/launch/bringup_ur5.launch" />

  <include file="$(find iai_donbot_bringup)/launch/omnidrive.launch" />

  <!-- Bring together the different joint state messages -->
  <node pkg="joint_state_publisher" type="joint_state_publisher"
  name="joint_state_publisher" output="screen">
    <rosparam param="source_list">
    - base/joint_states
    - arm/joint_states
    </rosparam>
    <rosparam param="zeros">
    'odom_x_joint': 0.0
    'odom_y_joint': 0.0
    'odom_z_joint': 0.0
    'gripper_base_gripper_left_joint': 0.0
    'gripper_joint': 0.0
    </rosparam>

    <param name="rate" value="120"/>
    <param name="use_gui" value="False"/>
  </node>

  <include file="$(find iai_donbot_bringup)/launch/ps3.launch" />

  <include file="$(find iai_donbot_bringup)/launch/bringup_hokuyo.launch" />

</launch>
